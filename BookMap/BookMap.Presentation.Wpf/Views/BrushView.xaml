<UserControl x:Class="BookMap.Presentation.Wpf.Views.BrushView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookMap.Presentation.Wpf.Views"
             mc:Ignorable="d" 
             Width="32" Height="32"
             d:DesignHeight="32" d:DesignWidth="32">
    <Grid Background="White" PreviewMouseDown="BrushClicked">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Name="Color" Grid.RowSpan="2" Background="White" ></Canvas>
        <Border Name="Border" Grid.RowSpan="2" BorderThickness="1" BorderBrush="Red" Visibility="Hidden"></Border>
        <TextBlock Name="Size" VerticalAlignment="Center" HorizontalAlignment="Center">10</TextBlock>
        <TextBlock Name="Title" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">Erase</TextBlock>
    </Grid>
</UserControl>
